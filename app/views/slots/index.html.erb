


<div class="row">
  <div class="col-sm-6">
    <h1>Slots</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_slot_path, class: 'btn btn-primary' do %>
    Add New Slot
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Date</th>
            <th>Start time</th>
            <th>Center</th>
            <th>Capacity</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @slots.each do |slot| %>
        <%= content_tag :tr, id: dom_id(slot), class: dom_class(slot) do %>
          

                      <td><%= slot.date %></td>
                      <td><%= slot.start_time %></td>
                      <td><%= slot.center %></td>
                      <td><%= slot.capacity %></td>
          
          
            <td><%= link_to 'Show', slot %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

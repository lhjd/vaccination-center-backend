


<div class="row">
  <div class="col-sm-6">
    <h1>Residents</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_resident_path, class: 'btn btn-primary' do %>
    Add New Resident
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Nric</th>
            
      </tr>
    </thead>

    <tbody>
      <% @residents.each do |resident| %>
        <%= content_tag :tr, id: dom_id(resident), class: dom_class(resident) do %>
          
            <td><%= link_to resident.name, resident %></td>
          

                      <td><%= resident.nric %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<%= form_with(model: resident, local: true) do |form| %>
  <% if resident.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resident.errors.count, "error") %> prohibited this resident from being saved:</h2>

      <ul>
      <% resident.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :nric, class: 'form-label' %>
      <%= form.text_field :nric, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <% if resident.persisted? %>
      <div class="float-end">
        <%= link_to 'Destroy', resident, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if resident.persisted? %>
      <%= link_to "Cancel", resident, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", residents_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>

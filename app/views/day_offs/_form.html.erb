      <h2><%= pluralize(day_off.errors.count, "error") %> prohibited this day_off from being saved:</h2>

      <ul>
      <% day_off.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :date, class: 'form-label' %>
      <%= form.date_field :date, class: 'form-control' %>
    </div>


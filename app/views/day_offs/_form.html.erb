    </div>

  <div class="mb-3">
    <% if day_off.persisted? %>
      <div class="float-end">
        <%= link_to 'Destroy', day_off, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if day_off.persisted? %>
      <%= link_to "Cancel", day_off, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", day_offs_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>

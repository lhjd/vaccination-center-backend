


<div class="row">
  <div class="col-sm-6">
    <h1>Day_offs</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_day_off_path, class: 'btn btn-primary' do %>
    Add New Day off
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Date</th>
            <th>Nurse</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @day_offs.each do |day_off| %>
        <%= content_tag :tr, id: dom_id(day_off), class: dom_class(day_off) do %>
          

                      <td><%= day_off.date %></td>
                      <td><%= day_off.nurse %></td>
          
          
            <td><%= link_to 'Show', day_off %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
